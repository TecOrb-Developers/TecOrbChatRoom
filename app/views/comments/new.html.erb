<% if current_user %>
  <div class="page-header">
    <h1>Drop your message to Tecorb chat room!</h1> <small> Your message can be display by any member of the chat room.</small>
  </div>

  <%= render 'form' %>
  <div class="panel panel-default" id="comments">
    <div class="panel-body">
      <ul class="media-list">
        <%= render @comments %>
      </ul>
    </div>
  </div>
<% else %>
  <%= render 'welcome' %>
<% end %>